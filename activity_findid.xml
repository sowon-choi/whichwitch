<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Findid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="ID 찾기"
            android:textColor="#FFFFFF"
            android:textSize="50dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/findid_name_edittext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint=" 이름" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

        <EditText
            android:id="@+id/findid_email_edittext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint=" E-Mail"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

        <EditText
            android:id="@+id/findid_phone_edittext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:hint=" Phone Number"
            android:inputType="phone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" " />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/findid_sendemail_btn"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="#8e7cc3"
            android:text="E-Mail 보내기"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/findid_login_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="#00434343"
            android:stateListAnimator="@null"
            android:text="로그인화면"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>
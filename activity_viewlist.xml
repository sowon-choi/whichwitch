<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343"
    tools:context=".Viewlist"
    android:id="@+id/Viewlist">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--            메뉴버튼, MY LIST, ScrollView-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--                메뉴버튼, MY LIST-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >

                <ImageButton
                    android:id="@+id/viewlist_menu_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/viewlist_menu_btn"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/viewlist_name_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="MY LIST"
                    android:textColor="#FFFFFF"
                    android:textSize="50dp"
                    android:textStyle="bold" />

                <!--        <Switch-->
                <!--            android:id="@+id/switch1"-->
                <!--            android:layout_width="match_parent"-->
                <!--            android:layout_height="wrap_content"-->
                <!--            android:textoff="위치별"-->
                <!--            android:texton="시간별"-->
                <!--            android:showText="true"-->
                <!--            />-->

            </LinearLayout>

            <!--                ScrollView-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:id="@+id/viewlist_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ff9900"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="하단동 아트몰링"
                            android:textSize="20dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="ABC 매장 가기" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="공차 가서 버블티 먹기"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="CGV 가서 영화 보기" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8e7cc3"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="동아대학교"
                            android:textSize="20dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="소프 발표하기" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="프린트하기"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="인공지능 과제 제출" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8e7cc3"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="동아대학교"
                            android:textSize="20dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="소프 발표하기" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="프린트하기"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="인공지능 과제 제출" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8e7cc3"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="동아대학교"
                            android:textSize="20dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="소프 발표하기" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="프린트하기"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="인공지능 과제 제출" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8e7cc3"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="동아대학교"
                            android:textSize="20dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="소프 발표하기" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="프린트하기"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="인공지능 과제 제출" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#8e7cc3"
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="동아대학교"
                            android:textSize="20dp"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="소프 발표하기" />

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="프린트하기"/>

                        <CheckBox
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="인공지능 과제 제출" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <!--            Plus 버튼-->
        <ImageButton
            android:id="@+id/viewlist_plus_btn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/viewlist_plus_btn"
            android:text="+"
            android:textColor="#FFFFFF"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"/>

    </FrameLayout>

    <include layout="@layout/activity_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
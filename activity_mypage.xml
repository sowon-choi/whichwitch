<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#434343"
    android:gravity="center"

    tools:context=".Mypage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        android:text="내 정보 변경"
        android:textColor="#FFFFFF"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mypage_name_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:gravity="center|left"
        android:text="이름"
        android:textStyle="bold"
        android:textSize="20dp"
         />

    <TextView
        android:id="@+id/mypage_email_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="20dp"
        android:gravity="center|left"
        android:text="이메일"
        android:textStyle="bold"
        android:textSize="20dp"
       />

    <EditText
        android:id="@+id/mypage_newpw_edittext"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:hint="새 비밀번호" />
    <TextView
        android:id="@+id/mypage_newpw_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"/>

    <EditText
        android:id="@+id/joinus_newpwcheck_edittext"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:inputType="textPassword"
        android:hint="새 비밀번호 확인" />
    <TextView
        android:id="@+id/mypage_newpwcheck_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FF0000"/>

    <TextView
        android:id="@+id/mypage_phone_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="30dp"
        android:text="01000000000"
        android:gravity="center|left"
        android:textStyle="bold"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/mypage_cngpw_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#8e7cc3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:text="비밀번호 변경" />
    <Button
        android:id="@+id/mypage_back_btn"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="#00434343"
        android:text="돌아가기"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="10dp"
        android:stateListAnimator="@null"/>

</LinearLayout>